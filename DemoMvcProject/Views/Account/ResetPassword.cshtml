@model DemoMvcProject.Models.ResetPasswordModel

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row align-items-center justify-content-center">
    <div class=" col-md-6 card">
        <div class="card-header">
            <h4>Reset Password</h4>
        </div>
        <div class="md-form  card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ResetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="md-form ">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="md-form ">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="md-form ">
                
                <input type="hidden" asp-for="Email" class="form-control" />
                
            </div>
            <div class="md-form ">
             
                <input type="hidden" asp-for="Token" class="form-control" />
                
            </div>
            <div class="md-form ">
                <input type="submit" value="Reset" class="btn btn-sm btn-rounded btn-primary" />
            </div>
        </form>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
           <a href="/Account/Register">Register</a>
        </div>
    </div>

</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
