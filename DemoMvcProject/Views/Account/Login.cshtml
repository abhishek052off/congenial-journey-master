@model DemoMvcProject.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row align-middle align-items-center justify-content-center">
    <div class=" col-md-6 card">
        <div class="card-header mt-1">
            <h4>Log In</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="md-form ">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model =>
                                model.RememberMe)
                            </div>
                             <a asp-action="ForgotPassword">Forgot Password</a>
                        </div>
                       
                           
                       
                        <div class="md-form ">
                            <input type="submit" value="Login" class="btn btn-sm btn-rounded btn-primary" />
                            <p>Dont Have An Account ?  <a class="link-danger" href="/Account/Register">Register</a> </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>

</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
