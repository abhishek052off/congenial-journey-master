@model DemoMvcProject.Models.UserRegistrationModel

@{
    ViewData["Title"] = "Register";
}


<div class="row align-middle align-items-center justify-content-center">
    <div class=" col-md-6 card">
        <div class="card-header">
            <h4>Register</h4> 
        </div>
        <div class="card-body">
            <div class="row">
                <div class="md-form col-md-12">
                    <form asp-action="Register">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="md-form ">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="md-form ">
                            <input type="submit" value="Register" class="btn btn-sm btn-rounded btn-sm btn-rounded btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
